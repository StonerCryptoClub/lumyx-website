{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-debugger": "error",
    "no-unused-vars": "warn",
    "no-eval": "error",
    "no-implied-eval": "error",
    "no-script-url": "error",
    "no-unsafe-innerhtml": "error",
    "no-unsafe-optional-chaining": "error"
  }
} 